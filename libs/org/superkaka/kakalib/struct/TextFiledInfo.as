package  org.superkaka.kakalib.struct 
{
	import flash.display.BitmapData;
	/**
	 * ...
	 * @author
	 * 
	 */
	public class TextFiledInfo
	{		
		/**
		 * 根据内容字符取得位图数据
		 */	
		public static function getBitDataByStr(str:String,typ:String="Numera"):BitmapData{
			var bitdata:BitmapData
			
			switch(str){
				case "+":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[11]).bitmapData
					break;
				case "-":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[12]).bitmapData
					break;
				case "0":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[0]).bitmapData
					break;
				case "1":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[1]).bitmapData
					break;
				case "2":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[2]).bitmapData
					break;
				case "3":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[3]).bitmapData
					break;			
				case "4":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[4]).bitmapData
					break;
				case "5":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[5]).bitmapData
					break;
				case "6":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[6]).bitmapData
					break;
				case "7":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[7]).bitmapData
					break;			
				case "8":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[8]).bitmapData
					break;
				case "9":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[9]).bitmapData
					break;
				case " ":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[10]).bitmapData
					break;
				case ":":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[13]).bitmapData
					break;
				case ".":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[14]).bitmapData
					break;
				case "/":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[15]).bitmapData
					break;
				case "%":
					bitdata=BitmapFrameInfo(BitmapFrameInfo.getBitmapFrameInfo(typ)[16]).bitmapData
					break;
				
				
			}
			
			return bitdata		
			
		}
		
		
	}
	
	
	

}